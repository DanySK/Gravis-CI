# rm -vfr $HOME/.gradle/caches/*/gradle-kotlin-dsl/*/cache/
# rm -vfr $HOME/.gradle/caches/*/gradle-kotlin-dsl-accessors/*/cache/
# rm -vf $HOME/.gradle/caches/*/fileHashes/*.bin
